<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/auth_background">


    <View
        android:id="@+id/view"
        android:layout_width="60dp"
        android:layout_height="4sp"
        android:layout_marginTop="12dp"
        android:background="@color/colorBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="282dp"
        android:layout_height="87dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:srcCompat="@drawable/undraw_happy_birthday_re_c16u" />


    <TextView
        android:id="@+id/textSheetRoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/play"
        android:textSize="16dp"
        android:text="Пригласите как можно больше друзей зарегистрироваться в нашем приложении, используя ваш уникальный код-приглашение. Чем больше друзей присоединятся, тем выше ваши шансы на победу. Когда конкурс закончится, мы выберем одного счастливчика, который получит свой приз - 100 литров бензина"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/textView13"
        android:fontFamily="@font/play"
        android:textColor="@color/colorText"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ваш код. Нажмите чтобы копировать"
        app:layout_constraintStart_toStartOf="@+id/textCodeUserID"
        app:layout_constraintTop_toBottomOf="@+id/textSheetRoad" />

    <TextView
        android:id="@+id/textCodeUserID"
        style="@style/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/play_bold"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textCommentView2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        android:maxLines="3"
        android:text="ff"
        android:textColor="@color/colorText"
        android:textSize="2dp"
        app:layout_constraintTop_toBottomOf="@+id/textCodeUserID" />


</androidx.constraintlayout.widget.ConstraintLayout>