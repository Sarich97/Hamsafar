<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/auth_background">


    <View
        android:id="@+id/view"
        android:layout_width="60dp"
        android:layout_height="4sp"
        android:layout_marginTop="12dp"
        android:background="@color/colorBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/play_bold"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:text="Состояние автодорог"
        android:textColor="@color/colorText"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />


    <TextView
        android:id="@+id/textSheetRoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/play"
        android:gravity="center_vertical"
        android:text="Автотрасса Душанбе — Худжанд:  Открыто"
        android:textColor="@color/colorText"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textCommentView"
        style="@style/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/play"
        android:maxLines="3"
        android:text="Автотрасса Душанбе — Худжанд:  Открыто Автотрасса Душанбе — Худжанд:  Открыто "
        android:textColor="@color/colorText"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSheetRoad"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textCommentView2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        android:maxLines="3"
        android:text="ff"
        android:textColor="@color/colorText"
        android:textSize="2dp"
        app:layout_constraintTop_toBottomOf="@+id/textCommentView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="282dp"
        android:layout_height="87dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSheet"
        app:srcCompat="@drawable/undraw_navigator_a479" />


</androidx.constraintlayout.widget.ConstraintLayout>