<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreatPostActivity">


    <ImageView
        android:id="@+id/creatPostBackBtn"
        style="@style/btnBackPageStyle"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textView6"
        style="@style/authTextDiv"
        android:layout_marginTop="12dp"
        android:text="Укажите направление маршрута"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creatPostBackBtn" />

    <Spinner
        android:id="@+id/spinnerStartTrip"
        style="@style/SpinnerTheme"
        android:layout_marginBottom="12dp"
        android:entries="@array/townList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spinnerEndTrip"
        style="@style/SpinnerTheme"
        android:layout_marginBottom="12dp"
        android:entries="@array/townListEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerStartTrip"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        style="@style/authTextDiv"
        android:layout_marginTop="12dp"
        android:text="Укажите дату и время маршрута"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerEndTrip" />

    <EditText
        android:id="@+id/editTextDate"
        style="@style/editText"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:ems="10"
        android:hint="Дата"
        android:clickable="true"
        android:inputType="date"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTextTime"
        style="@style/editText"
        android:drawableLeft="@drawable/ic_baseline_access_time_24"
        android:ems="10"
        android:hint="Время"
        android:clickable="true"
        android:enabled="false"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />


    <TextView
        android:id="@+id/textView10"
        style="@style/authTextDiv"
        android:layout_marginTop="12dp"
        android:text="Укажите цену и количество мест"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTime"/>

    <EditText
        android:id="@+id/editTextPrice"
        style="@style/editText"
        android:drawableLeft="@drawable/ic_baseline_attach_money_24"
        android:ems="10"
        android:hint="Цена за пассажира"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/editTextSeat"
        style="@style/editText"
        android:drawableLeft="@drawable/ic_baseline_airline_seat_recline_extra_24"
        android:ems="10"
        android:hint="Количество мест"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrice" />


    <Button
        android:id="@+id/creatTrip"
        style="@style/authBtnStyle"
        android:text="Создать поездку"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSeat"
        tools:ignore="DuplicateSpeakableTextCheck" />


    <ProgressBar
        android:id="@+id/progressBarPost"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/creatTrip"
        app:layout_constraintStart_toStartOf="@+id/creatTrip"
        app:layout_constraintTop_toBottomOf="@+id/creatTrip" />

</androidx.constraintlayout.widget.ConstraintLayout>