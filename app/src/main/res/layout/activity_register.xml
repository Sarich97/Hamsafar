<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.RegisterActivity">


    <TextView
        android:id="@+id/textView"
        style="@style/authTextTitle"
        android:text="@string/auth_salam"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@style/authTextDiv"
        android:layout_marginTop="20dp"
        android:text="Укажите ваше имя и номер телефона"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/user_Name"
        style="@style/editText"
        android:drawableStart="@drawable/ic_baseline_person_outline_24"
        android:hint="@string/user_name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/user_Phone"
        style="@style/editText"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        android:hint="@string/phone_number"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_Name"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/registerUserBtn"
        style="@style/authBtnStyle"
        android:text="@string/registetr_btn_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_Phone" />


    <TextView
        android:id="@+id/singInText"
        style="@style/btnTextViewStyleOnAuthPages"
        android:text="@string/political_auth"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ProgressBar
        android:id="@+id/progressRegisterActivity"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/registerUserBtn"
        app:layout_constraintStart_toStartOf="@+id/registerUserBtn"
        app:layout_constraintTop_toBottomOf="@+id/registerUserBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>