<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView3"
        style="@style/authTextDiv"
        android:layout_marginTop="48dp"
        android:text="По номеру телефона вы сможете связаться с попутчиками, а они - с вами."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/user_Phone"
        style="@style/editText"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        android:hint="@string/phone_number"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/user_Experience"
        style="@style/editText"
        android:autofillHints=""
        android:drawableStart="@drawable/ic_baseline_timeline_24"
        android:hint="Стаж вождения"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/user_Phone"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp" />


    <EditText
        android:id="@+id/user_CarModel"
        style="@style/editText"
        android:autofillHints=""
        android:drawableStart="@drawable/ic_baseline_directions_car_24"
        android:hint="Модель автомобиля"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/user_Experience"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp" />


    <Button
        android:id="@+id/creatAccauntBtn"
        style="@style/authBtnStyle"
        android:text="@string/register_btn_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_CarModel"
        tools:ignore="DuplicateSpeakableTextCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>