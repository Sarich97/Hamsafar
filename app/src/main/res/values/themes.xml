<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hamsafar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorBG</item>
        <item name="colorOnSecondary">@color/colorBG</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/cardBackgroundColor</item>
        <item name="android:textColorSecondary">#333333</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:background">@drawable/edit_text_input</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:drawablePadding">8dp</item>
    </style>


    <style name="authTextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/play_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="authTextDiv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="authBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:fontFamily">@font/play_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>